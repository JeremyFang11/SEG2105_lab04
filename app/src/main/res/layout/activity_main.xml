<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:onClick="OnSetAvatarButton"
            android:src="@mipmap/kon"
            tools:src="@drawable/kon" />

        <TextView
            android:id="@+id/iconTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autoText="false"
            android:padding="10dp"
            android:text="Soccer Team Manager"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/black"
            android:textSize="20sp"
            app:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/teamInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:autoText="false"
            android:ems="10"
            android:hint="(Please enter team name)"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teamInputSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Team Name" />

        <EditText
            android:id="@+id/zipInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="(Please enter ZIP code)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/zipInputSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Team Address (ZIP code)" />

        <Button
            android:id="@+id/openButton"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="OnOpenInGoogleMaps"
            android:text="OPEN IN GOOGLE MAPS" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>